  <div class="card">
    <% @users.each do |u| %>
        <div class= "m-2 row  p-1">
            <% if u.avatar.attached? %>
            <div class="col-md-5">
                            <%= link_to image_tag(u.avatar, class: 'find_friends_img'), user_path(u.id)%><br>

            </div>
            <div class="col-md-7">
                <h2 class="h3">
                    Username: <%=link_to u.username, user_path(u.id) %>
                </h2>
                <hr>
                Followers: <%= u.how_many_followers.length %> <br>
                Following: <%= u.following.length %> <br>
                Post: <%=u.posts.count %>

            </div>

            <% end %>
        </div>
    <% end %>  
  
  </div>
